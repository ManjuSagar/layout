<div id="main" class='devise'>
  <div class="container-fluid">
    <div class="row">
      <header class="text-center">
        <h1><%= app_name %></h1>
        <p class="p0 m0">Sign up</p>
      </header>
    </div>
  <% resource.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= fa_icon_tag "remove" %> <%= message %>
      </div>
  <% end %>
  <div class="row mt20">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class=>"form-horizontal col-xs-12 col-md-6 col-md-offset-3", :id=>"new_user"}) do |f| %>
      <div class="sheet form-sheet">
        <div class="sheet-inner">
          <div class="form-group ">
            <%= f.label :email, :class=> "form-label" %>
            <%= f.email_field :email, autofocus: true, :id=>"user_email", :required=>"required" %>
          </div>
          <div class="form-group ">
            <%= f.label :password, :class=>"form-label" %>
            <%= f.password_field :password, autocomplete: "off", :id=>"user_password", :required=>"required" %>
          </div>
          <div class="form-group ">
            <%= f.label :password_confirmation, :class=>"form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", :id=>"user_password_confirmation", :required=>"required" %>
          </div>
          <div class="form-group ">
            <%= f.label :first_name, :class=>"form-label" %>
            <%= f.text_field :first_name, autofocus: true, :required=>"required" %>
          </div>
          <div class="form-group ">
            <%= f.label :last_name, :class=>"form-label" %>
            <%= f.text_field :last_name, autofocus: true, :required=>"required" %>
          </div>
          <div class="form-group ">
            <%= f.label :phone_number, :class=>"form-label" %>
            <%= f.phone_field :phone_number, autofocus: true, :required=>"required" %>
          </div>
          <div class="form-group ">
            <%= f.label :address, :class=>"form-label" %>
            <%= f.text_area :address, autofocus: true, :required=>"required" %>
          </div>
          <div class="form-group ">
            <%= f.label :city, :class=>"form-label" %>
            <%= f.text_field :city, autofocus: true, :required=>"required" %>
        </div>
      </div>
      <div class="form-actions text-right mr15">
        <%= f.submit "Sign up", :class=> "btn btn-primary" %>
      </div>
    </form>
   <% end %>
  </div>
  <br/>
  <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 pull-left">
    <div class="col-xs-12 col-md-12 signup-button text-center">
      <a href="/users/sign_in"><small>Sign in</small></a>
    </div>
  </div>
</div>
</div>
  </div>