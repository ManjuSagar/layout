<div class="page-header">
  <div class="row row-same-height">
    <div class="col-md-12 col-sm-height col-middle">
      <h2 class="m0">Listing Affiliates</h2>
    </div>
    <div class="col-md-2 col-sm-height col-middle">
      <a class="btn btn-primary btn-large pull-right" href="/affiliates/new">
        <i class="fa fa-plus"></i> Add Affiliate
      </a>
    </div>
  </div>
</div>


  <div id="content" class="col-md-12">
    <div class="sheet sheet-condensed">
      <div class="sheet-inner">
        <table class="table">
          <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>City</th>
            <th>Edit</th>
            <th>Destroy</th>
          </tr>
          </thead>
          <tbody>
          <% @affiliates.each do |affiliate| %>
          <tr>
            <td><%=affiliate.first_name %></td>
            <td><%=affiliate.last_name %></td>
            <td><%=affiliate.email %></td>
            <td><%=affiliate.phone_number %></td>
            <td><%=affiliate.address %></td>
            <td><%=affiliate.city %></td>
            <td>
              <a href="edit/<%=affiliate.id%>" rel="tooltip" title="Edit"><i class="fa fa-pencil"></i></a>
            </td>
            <td>
              <a onclick="return confirm('Are you sure?')" data-method="delete" href="destroy/<%=affiliate.id%>" rel="tooltip nofollow" title="Delete"><i class="fa fa-trash-o"></i></a>
            </td>
          </tr>
           <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= will_paginate(@affiliates, :renderer => 'BootstrapPaginationHelper::LinkRenderer') %>
  </div>

