<div class="container-fluid">
  <% @affiliate.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= fa_icon_tag "remove" %> <%= message %>
      </div>
  <% end %>
</div>
<%= form_for @affiliate, html: {:class=> "simple_form form-horizontal", :id=>"new_contact"} do |u|%>
    <div class="form-group string required contact_name">
      <%=u.label :email, :class=> "string required col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%=u.text_field :email, :class=> "string required form-control", :id=> "contact_name",
                        :required=>"required"%>
        <div class="help-block">
          <i class="fa fa-asterisk"></i>
          required
        </div>
      </div>
    </div>
    <div class="form-group string required contact_name">
      <%=u.label :first_name, :class=> "string required col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%=u.text_field :first_name, :class=> "string required form-control", :id=> "contact_name", :required=>"required"%>
        <div class="help-block">
          <i class="fa fa-asterisk"></i>
          required
        </div>
      </div>
    </div>
    <div class="form-group string required contact_name">
      <%=u.label :last_name, :class=> "string required col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%=u.text_field :last_name, :class=> "string required form-control", :id=> "contact_name", :required=>"required"%>
        <div class="help-block">
          <i class="fa fa-asterisk"></i>
          required
        </div>
      </div>
    </div>
    <div class="form-group string required contact_name">
      <%=u.label :phone_number, :class=> "string required col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%=u.telephone_field :phone_number, :class=> "string required form-control", :id=> "contact_name", :required=>"required"%>
        <div class="help-block">
          <i class="fa fa-asterisk"></i>
          required
        </div>
      </div>
    </div>
    <div class="form-group string required contact_name">
      <%=u.label :address, :class=> "string required col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%=u.text_area :address, :class=> "string required form-control", :id=> "contact_name", :required=>"required"%>
        <div class="help-block">
          <i class="fa fa-asterisk"></i>
          required
        </div>
      </div>
    </div>
    <div class="form-group string required contact_name">
      <%=u.label :city, :class=> "string required col-sm-3 control-label" %>
      <div class="col-sm-5">
        <%=u.text_field :city, :class=> "string required form-control", :id=> "contact_name", :required=>"required"%>
        <div class="help-block">
          <i class="fa fa-asterisk"></i>
          required
        </div>
      </div>
    </div>
    <% unless @affiliate.persisted? %>
        <div class="form-group string required contact_name">
          <%=u.label :password, :class=> "string required col-sm-3 control-label" %>
          <div class="col-sm-5">
            <%=u.password_field :password, :class=> "string required form-control", :id=> "contact_name", :required=>"required"%>
            <div class="help-block">
              <i class="fa fa-asterisk"></i>
              required
            </div>
          </div>
        </div>
    <% end %>
    <div class="row">
      <div class="col-md-9 col-md-offset-3">
        <% msg = (@affiliate.persisted?) ? "Update Affiliate" : "Create Affiliate" %>
        <%= u.submit msg, :class=> "btn btn-primary"%>
        <a class="btn" href="/affiliates/index">Cancel</a>
      </div>
    </div>
<% end %>