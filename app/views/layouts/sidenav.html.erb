<%= render :layout => "layouts/minimal" do %>
    <% if current_user.present? %>
      <%= render partial: "layouts/sidenav" %>
      <div class='main-content' xmlns="http://www.w3.org/1999/html">
      <% else %>
        <div xmlns="http://www.w3.org/1999/html">
      <% end %>
      <nav class="navbar navbar-default navbar-shadow" style="margin-top: -50px;margin-left: 0px" role="navigation">
        <div class="navbar-inner">
          <div class="collapse navbar-collapse" id="main-content-nav">
            <ul class="nav navbar-nav">
              <% if current_user.present? %>
                <li class='navbar-form'>
                  <% if controller_name == "welcome" && action_name == "component_display" %>
                      <button class="btn btn-primary" href="#update"  id='update' title="Update"><i class="fa fa-fw fa-save"></i></button>
                  <% elsif controller_name == "welcome" && action_name == "container" %>
                  <div class="btn-group" data-toggle="buttons-radio">
                    <button type="button" id="edit" class="btn btn-primary active" title="Edit"><i class="fa fa-fw ion-edit"></i></button>
                    <button type="button" class="btn btn-primary" id="sourcepreview" title="Preview"><i class="ion-eye"></i></button>
                  </div>
                  <div class="btn-group">
                    <button class="btn btn-primary" href="#clear" id="clear"><i class="mdi-content-clear" title="Clear"></i></button>
                  </div>
                  <div class="btn-group">
                    <button class="btn btn-primary" href="#undo" id="undo" ><i class="mdi-content-undo" title="Undo"></i></button>
                    <button class="btn btn-primary" href="#redo" id="redo" ><i class="mdi-content-redo" title="Redo"></i></button>
                  </div>
                  <div class="btn-group">
                    <% if current_user.user_type == 'Campaign' %>
                     <button class="btn btn-primary" href="#save"  data-target="#saveModal" data-toggle="modal" title="Save"><i class="fa fa-fw fa-save"></i></button>
                    <% else %>
                    <button class="btn btn-primary" href="#save"  id = "savewithoutmodal" data-target="#saveModala" title="Save"><i class="fa fa-fw fa-save"></i></button>
                    <% end %>
                  </div>
                  <% end %>
                  <li>
                    <form class="navbar-form search-form" role="search">
                      <input type="text" class="form-control" id="searchbox" placeholder="Search">
                      <span class="search-button"><i class="fa fa-search"></i></span>
                    </form>
                  </li>
                  <li class="navbar-form">
                    <div class="btn-group" data-toggle="buttons">
                      <label class="btn btn-default active" id="home">
                        <input type="radio" name="options" id="option1" autocomplete="off" checked=""> <i class="fa fa-home"></i>
                      </label>
                      <label class="btn btn-default">
                        <input type="radio" name="options" id="option2" autocomplete="off"> <i class="fa fa-envelope"></i>
                      </label>
                      <label class="btn btn-default">
                        <input type="radio" name="options" id="option3" autocomplete="off"> <i class="fa fa-user"></i>
                      </label>
                    </div>
                  </li>
                  <li class="dropdown">
                    <button class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fa fa-fw fa-cog"></i>
                      <span class="caret caret-light"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="main.html#">Site management</a></li>
                      <li><a href="main.html#">User management</a></li>
                      <li><a href="main.html#">Settings</a></li>
                    </ul>
                  </li>
                  <li class="dropdown notifications">
                    <button class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fa fa-fw fa-bell"></i>
                      <span class="badge badge-sm">2</span><span class="caret caret-light"></span>
                      <span class="visible-xs-inline">Notifications</span>
                    </button>
                    <!-- dropdown -->
                    <ul class="dropdown-menu">
                      <li>
                        <div class="panel">
                          <div class="panel-heading text-center">
                            <small><strong>You have <span>2</span> notifications</strong></small>
                          </div>
                          <div class="list-group">
                            <a href="main.html#" class="media list-group-item">
                      <span class="pull-left">
                        <img alt="2" class="media-object img-circle" height="32" src="/assets/empty_person.png" width="32">
                      </span>
                      <span class="media-body">
                        <p>My name is Inigo Montoya.</p>
                        <small class="text-muted">10 minutes ago</small>
                      </span>
                            </a>
                            <a href="main.html" class="media list-group-item">
                      <span class="media-body">
                        <div>
                          <p>You've reached your space quota!</p>
                          <div class="progress progress-sm m0">
                            <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"><span class="sr-only">100% Complete</span></div>
                          </div>
                        </div>
                        <small class="text-muted">12 hours ago</small>
                      </span>
                            </a>
                          </div>
                          <div class="panel-footer">
                            <a href="main.html#" class="pull-right"><i class="fa fa-cog"></i></a>
                            <a href="main.html#">View all Notifications</a>
                          </div>
                        </div>
                      </li>
                    </ul>
                    <!-- / dropdown -->
                  </li>
                </li>
              <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if current_user.present? %>
                <li class="dropdown user-nav">
                  <button class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img alt="2" class="avatar img-rounded" height="32" src="/assets/empty_person.png" width="32">
                    <span class="caret caret-light"></span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li class="profile-header">
                      <img alt="2" class="avatar img-rounded" height="32" src="/assets/empty_person.png" width="32">
                      <p class="m0 p0">
                        <%= current_user.first_name %>
                      </p>
                      <p class="small m0 p0">Premium Account</p>
                    </li>
                    <li class="profile-footer">
                      <div class="pull-left">
                        <a href="/users/edit" class="btn btn-default btn-flat"><small>Edit Profile</small></a>
                      </div>
                      <div class="pull-right">
                        <a href="/users/sign_out" class="btn btn-default btn-flat small" data-method='delete'><small>Log Out</small></a>
                      </div>
                    </li>
                  </ul>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <div id="download-layout">
        <div class="container-fluid"></div>
      </div>
      <%= yield %>
    </div>
<% end %>

  <div class='modal fade' id="saveModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" >
      <div class="modal-content">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">×</a>
          <h3>Enter the Component Name</h3>
        </div>
        <div class="modal-body">
          <p>
          <p id="error-msg", style="display: none; color: red"> *Name Cannot be Blank!! </p>
          <input id="save-name" required="true">
          </input>
          </p>
        </div>
        <div class="modal-footer">
          <a class="btn" id="save">Save</a>
          <a class="btn" data-dismiss="modal">Close</a>
        </div>
      </div>
    </div>
  </div>
<!-- Modal -->
  <div class="modal fade" role="dialog" id="downloadModal">
    <div class="modal-dialog" role="document" >
      <div class="modal-content">
        <div class="modal-header">
          <a class="close" data-dismiss="modal">×</a>
            <h3>Download</h3>
        </div>
        <div class="modal-body">
          <p>The .zip includes the directory structure, css, less and js.</p>
          <div class="btn-group">
            <button type="button" id="fluidPage" class="active btn btn-info"><i class="icon-fullscreen icon-white"></i> Full container View </button>
            <button type="button" class="btn btn-info" id="fixedPage"><i class="icon-screenshot icon-white"></i> Responsive View </button>
          </div>
        <br>
        <br>
        <p>
          <textarea></textarea>
        </p>
        </div>
        <a class="btn" data-dismiss="modal" id="downloadhtmlzip">Download Zip</a>
        <a class="btn" data-dismiss="modal" id="downloadhtml">Download Html</a>
        <div class="modal-footer"> <a class="btn" data-dismiss="modal">Close</a> </div>
      </div>
    </div>
  </div>


<div class='modal fade' id="changeModal" role="dialog">
  <div class="modal-dialog" role="document" >
    <div class="modal-content">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Edit the HTML</h3>
      </div>
      <div class="modal-body">
        <textarea rows="4" cols="50"></textarea>
      </div>
      <div class="modal-footer">
        <a class="btn" id="change">change</a>
        <a class="btn" data-dismiss="modal">Close</a>
      </div>
    </div>
  </div>
</div>