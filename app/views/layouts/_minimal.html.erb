<!DOCTYPE html>
<%= html_tag :lang => "en" do %>
  <head>
    <meta charset="utf-8">
    <title><%= [@title, app_name].compact.join(" - ") %></title>
    <%= csrf_meta_tags %>

    <!-- Ensure devices display responsive pages properly -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le fonts -->
    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Sans:400,700" %>


    <link rel="stylesheet" href="//releases.flowplayer.org/6.0.3/skin/minimalist.css">
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="//releases.flowplayer.org/6.0.3/flowplayer.min.js"></script>
    <!-- Include lines below to support multiple resolutions via quality selector plugin -->
    <link rel="stylesheet" href="//flowplayer.org/drive/quality-selector.css">

    <script src="//releases.flowplayer.org/hlsjs/flowplayer.hlsjs.min.js"></script>
    <script src="//flowplayer.org/drive/quality-selector-v6.js"></script>

    <!-- Le styles -->
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= yield :styles %>

    <!-- Le fav and touch icons -->
    <%= favicon_link_tag %>
    <%# favicon_link_tag "apple-touch-icon.png", :rel => "apple-touch-icon" %>

    <%= yield :head %>
  </head>
  <body class="<%= yield (:body_class) %>">
    <%= render "layouts/navbar" %>

    <div id="main" class="container-fluid">
      <div class="row">
        <%= yield %>
      </div> <!-- /.container -->
    </div> <!-- /#main -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <!-- This is for Google Maps integration, you can safely remove if not using Google Maps -->
    <%= javascript_include_tag "//maps.google.com/maps/api/js?sensor=true&.js" %>
    <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" %>
    <%= javascript_include_tag "application" %>
    <%= yield :javascript %>

  </body>
<% end %>